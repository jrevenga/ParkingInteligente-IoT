<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
	<Appenders>				
	    <!-- LOG -->
		<RollingFile name="LogFile" fileName="/opt/tomcat/webapps/pecera/log/log.log"
			filePattern="/opt/tomcat/webapps/pecera/log/logs/Ubicomp-%d{yyyy}-%i.log.gz">
			<PatternLayout
				pattern="%n%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %-30l %logger{36} ### %msg"
				header="-- UBICOMP EXAMPLE --" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="10 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20"/>
		</RollingFile>		
	    <!-- LOGDB -->
		<RollingFile name="LogFileDB" fileName="/opt/tomcat/webapps/pecera/log/logdb.log"
			filePattern="/opt/tomcat/webapps/pecera/log/logs/Ubicomp-%d{yyyy}-%i.logdb.gz">
			<PatternLayout
				pattern="%n%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %-30l %logger{36} ### %msg"
				header="-- UBICOMP EXAMPLE --" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="10 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20"/>
		</RollingFile>		
	    <!-- LOGMQTT -->
		<RollingFile name="LogFileMQTT" fileName="/opt/tomcat/webapps/pecera/log/logmqtt.log"
			filePattern="/opt/tomcat/webapps/pecera/log/logs/Ubicomp-%d{yyyy}-%i.logmqtt.gz">
			<PatternLayout
				pattern="%n%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %-30l %logger{36} ### %msg"
				header="-- UBICOMP EXAMPLE --" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="10 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20"/>
		</RollingFile>	
	</Appenders>
	<Loggers>
	    <!-- LOG -->
		<Logger name="log" additivity="FALSE" level="INFO">
            <AppenderRef ref="LogFile" level="INFO" />
        </Logger>
	    <!-- LOGDB -->
		<Logger name="logdb" additivity="FALSE" level="INFO">
            <AppenderRef ref="LogFileDB" level="INFO" />
        </Logger>
	    <!-- LOGMQTT -->
		<Logger name="logmqtt" additivity="FALSE" level="INFO">
            <AppenderRef ref="LogFileMQTT" level="INFO" />
        </Logger>
	</Loggers>
</Configuration>